<div class="product">
		<div class="product_img">
			<a href="/products/{{product.slug}}"><img alt="product_img1" src="/assets/images/products/{{product.imagesUrl[0]}}" height="300px"></a>
			<div class="product_action_box">
				<ul class="list_none pr_action_btn">
					<li class="add-to-cart">
						<a href="/cart/add/{{product.id}}/1" title="Add Product" class="action action_cart">
							<i class="icon-basket-loaded"></i>
							Add To Cart
						</a>
					</li>
					<li>
						<a href="/compare/add/{{product.id}}" title="Compare Products" class="action action_compare">
							<i class="icon-shuffle"></i>
						</a>
					</li>
					<li>
						<a href="/products/{{product.slug}}" title="More Details">
							<i class="icon-info"></i>
						</a>
					</li>
					<li>
						<a href="/wishlist/add/{{product.id}}" title="Add To My WishList" class="action action_like">
							<i class="icon-heart"></i>
						</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="product_info">
			<h6 class="product_title">
				<a href="/products/{{product.slug}}">{{product.name | title }}</a>
			</h6>
			<div class="product_price">
				<span class="price">{{(product.soldePrice / 100) | format_currency(app.session.get('settings').currency)}}</span>
				<del>{{(product.regularPrice / 100) | format_currency(app.session.get('settings').currency)}}</del>
				<div class="on_sale">
					<span> -{{((product.regularPrice - product.soldePrice) / 100) | format_currency(app.session.get('settings').currency)}}$</span>
				</div>
			</div>
			<div class="rating_wrap">
				<div class="rating">
					<div class="product_rate" style="width: 80%;"></div>
				</div>
				<span class="rating_num">(15)</span>
			</div>
			<div class="pr_desc">
				<p>{{product.description | title}}</p>
			</div>
			<!--<div class="pr_switch_wrap">
				<div class="product_color_switch">
					<span data-color="#87554B" class="active"></span>
					<span data-color="#333333"></span>
					<span data-color="#DA323F"></span>
				</div>
			</div>-->
		</div>
</div>
