{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	| Log in!
{% endblock %}

{% block body %}
	<div class="main_content">
		<div class="login_register_wrap section">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-xl-6 col-md-10">
						<div class="login_wrap">
							<div class="padding_eight_all bg-white">
								<div class="heading_s1">
									<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
								</div>
								<form method="post" class="ng-untouched ng-pristine ng-invalid">
									{% if error %}
										<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% endif %}

									{% if app.user %}
										<div class="alert alert-warning" role="alert">
											You are logged in as
											{{ app.user.userIdentifier }},
											<a class="alert-link" href="{{ path('app_logout') }}">Logout</a>
										</div>
									{% endif %}
									<div class="form-group mb-3">
                                        <input type="email" name="email" placeholder="Your Email please" class="form-control ng-untouched ng-pristine ng-invalid" value="{{ last_username }}" autocomplete="email" required autofocus>
									</div>
									<div class="form-group mb-3">
                                        <input type="password" name="password" placeholder="Password" class="form-control ng-untouched ng-pristine ng-invalid" required>
									</div>
									<div class="login_footer form-group mb-3">
										<div class="chek-form">
											<div class="custome-checkbox d-flex gap-2">
                                                    <input type="checkbox" name="checkbox" id="exampleCheckbox1" value="" class="form-check-input">
													<span>Remember me</span>
											</div>
										</div>
										<a href="#">Forgot password?</a>
									</div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<div class="form-group mb-3">
										<button type="submit" name="login" class="btn btn-fill-out btn-block">Log in</button>
									</div>
								</form>
								<div class="different_login">
									<span>
										or</span>
								</div>
								<ul class="btn-login list_none text-center">
									<li>
										<a href="#" class="btn btn-facebook">
											<i class="ion-social-facebook"></i>Facebook</a>
									</li>
									<li>
										<a href="#" class="btn btn-google">
											<i class="ion-social-googleplus"></i>Google</a>
									</li>
								</ul>
								<div class="form-note text-center">
									Don't Have an Account?
									<a href="/register">Sign-Up Now</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
